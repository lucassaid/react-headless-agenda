{
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "react-headless-agenda": ["./src/index"]
    },
    "target": "esnext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["es2017", "DOM"]
  },
  "include": ["src", "stories"]
}
